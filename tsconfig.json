{
	"extends": "./node_modules/@microsoft/spfx-web-build-rig/profiles/default/tsconfig-base.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"disableReferencedProjectLoad": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"inlineSources": false,
		"jsx": "react-jsx",
		"lib": [
			"esnext",
			"es5",
			"dom",
			"es2015.collection"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noErrorTruncation": false,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"rootDir": "src",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"target": "esnext",
		"types": [
			"webpack-env"
		]
	},
	"exclude": [
		"node_modules",
		"temp",
		"tmp",
		"eslintrc.js"
	],
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}